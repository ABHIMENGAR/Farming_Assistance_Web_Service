{
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0",
            "includeFiles": "**/*.php"
        }
    },
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/uploads/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}